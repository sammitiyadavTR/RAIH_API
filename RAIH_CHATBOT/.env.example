# RAIH_CHATBOT Environment Configuration
# Copy this file to .env and fill in your actual values

# Snowflake Database Configuration
SNOWFLAKE_USER=your_snowflake_username
SNOWFLAKE_ACCOUNT=your_account.region.snowflakecomputing.com
SNOWFLAKE_WAREHOUSE=your_warehouse_name
SNOWFLAKE_DATABASE=your_database_name
SNOWFLAKE_SCHEMA=your_schema_name
SNOWFLAKE_ROLE=your_role_name
SNOWFLAKE_PRIVATE_KEY=your_private_key_content
PRIVATE_KEY_PASSPHRASE=your_passphrase
DB_ALLOWED_TABLES=table1,table2,table3

# OpenAI/Azure Configuration
OPENAI_WORKSPACE_ID=your_workspace_id
OPENAI_MODEL_NAME=your_model_name
OPENAI_ASSET_ID=your_asset_id
OPENAI_BASE_URL=https://your-openai-endpoint.com

# Thomson Reuters OpenArena Configuration
TR_CLIENT_ID=your_tr_client_id
TR_CLIENT_SECRET=your_tr_client_secret
TR_AUDIENCE=your_tr_audience
TR_TOKEN_URL=https://auth.thomsonreuters.com/oauth/token
OPEN_ARENA_WORKFLOW_ID=your_workflow_id
OPEN_ARENA_API_VERSION=v1
OPEN_ARENA_BASE_URL=https://api.openarena.thomsonreuters.com

# Default Authentication (Optional)
DEFAULT_AUTH_TOKEN=your_default_auth_token

# Application Configuration
PORT=5000
PYTHONPATH=/app

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Query Classification Settings
CONFIDENCE_THRESHOLD=0.36