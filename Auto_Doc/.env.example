# Auto_Doc Environment Configuration
# Copy this file to .env and fill in your actual values

# Thomson Reuters OpenArena Authentication
AUTH_URL=https://auth.thomsonreuters.com/oauth/token
CLIENT_ID=your_client_id_here
CLIENT_SECRET=your_client_secret_here
AUDIENCE=your_audience_here
GRANT_TYPE=client_credentials

# Optional: Personal Token (if you have one)
PERSONAL_TOKEN=your_personal_token_here

# Application Configuration
PORT=5001
PYTHONPATH=/app

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Optional: Custom file size limits (in KB and MB)
# MAX_FILE_SIZE_KB=100
# MAX_TOTAL_SIZE_MB=5